  </head>

  <body>

  <!-- nab(bootstrap) -->
  <nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid" style="background-color: #088001;">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"data-toggle="collapse"data-target="#navbarEexample8">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#" style="color: white; font-size: 40px; font-family: Times New Roman">
        Tricket
      </a>
    </div>
    <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarEexample8">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to " Home", root_path, class: "glyphicon glyphicon-home", :style=>"color: white; font-size: 20px; font-weight: bold;" %></li>
        <li id="to_aboutus"><a href=""  style="color: white; font-size: 20px;"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> About Us</a></li>
        <li><a href="#"  style="color: white; font-size: 20px;"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Creat Passport</a></li>
        <li><%= link_to " Return", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-time", :style=>"color: white; font-size: 19px; font-weight: bold;" %></li>
      </ul>
    </div>
    <% else %>
    <ul class="nav navbar-nav navbar-right">
        <li><%= link_to " Home", root_path, class: "glyphicon glyphicon-home", :style=>"margin-right: 10px; color: white; font-size: 19px; font-weight: bold;" %></li>
        <li id="to_aboutus" style="color: white; font-size: 20px; line-height: 55px;"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> About Us</li>
        <li><a href="#"  style="color: white; font-size: 20px;"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Creat Passport</a></li>
        <li><a href="#"  style="color: white; font-size: 20px;"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> Departure</a></li>
    </ul>
    <% end %>
  </div>
  </nav>

  <!-- 固定nabのためのspace -->
  <div class="space" style="height: 55px;"></div>

    <%= yield %>

  <!-- 固定nabのためのspace -->
  <div class="space" style="height: 55px;"></div>

  <footer>
    <div class="container-footer">
      <p style="color: white; font-size: 20px;  line-height: 40px;"> © All rights reserved by Tricket.Inc </p>
    </div>
  </footer>
  </body>
</html>
